{
  "manifest_version": 3,
  "name": "Brummer DevTools",
  "version": "1.0.0",
  "description": "Connect Brummer package script manager to Firefox Developer Tools",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus"
  ],
  
  "host_permissions": [
    "http://localhost:7777/*",
    "https://localhost:7777/*",
    "http://localhost/*",
    "https://localhost/*"
  ],
  
  "devtools_page": "devtools.html",
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "icons": {
    "16": "icons/bee-16.png",
    "32": "icons/bee-32.png",
    "48": "icons/bee-48.png",
    "128": "icons/bee-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["panel.html"],
      "matches": ["<all_urls>"]
    }
  ]
}